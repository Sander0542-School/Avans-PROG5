@using NinjaManager.Web.Models.Ninjas

@model DeleteModel

@{
    ViewBag.Title = $"Delete {Model.Name}";
}

<h1>Delete</h1>
<p class="text-danger">@ViewData["ErrorMessage"]</p>
<h3>Are you sure you want to delete this ninja?</h3>
<div>
    <h4>Ninja</h4>
    <hr/>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Gold)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Gold)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Gears)
        </dt>
        <dd class="col-sm-10">
            @string.Join(", ", Model.Gears)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id"/>
        <input type="submit" value="Delete" class="btn btn-danger"/> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>